loader.preload = "file:{{ gramine.libos }}"
libos.entrypoint = "bootstrap"
loader.argv0_override = "bootstrap"

loader.env.LD_LIBRARY_PATH = "/lib"
loader.argv_src_file = "file:argv_test_input"

fs.mount.lib.type = "chroot"
fs.mount.lib.path = "/lib"
fs.mount.lib.uri = "file:{{ gramine.runtimedir() }}"

fs.mount.entrypoint.type = "chroot"
fs.mount.entrypoint.path = "bootstrap"
fs.mount.entrypoint.uri = "file:{{ binary_dir }}/bootstrap"

sgx.nonpie_binary = true
sgx.debug = true

sgx.allowed_files = [
  "file:argv_test_input",
]

sgx.trusted_files = [
  "file:{{ gramine.runtimedir() }}/",
  "file:{{ binary_dir }}/bootstrap",
]
